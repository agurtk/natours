extends base
block content

  main.main
     .login-form
      h2.heading-secondary.ma-bt-lg Create your account !
      form.form.form--signup
        .form__group
          label.form__label(for='name') Full name
          input#name_signup.form__input(type='text', placeholder='Israel Israeli', required)
        .form__group
          label.form__label(for='email') Email address
          input#email_signup.form__input(type='email', placeholder='you@example.com', required)
        .form__group.ma-bt-md
          label.form__label(for='password') Password
          input#password_signup.form__input(type='password', placeholder='••••••••', required, minlength='8')
          label.form__label(for='confirm_password') Confirm password
          input#confirm_password_signup.form__input(type='password', placeholder='••••••••', required, minlength='8')
        .form__group
           button.btn.btn--green Sign up